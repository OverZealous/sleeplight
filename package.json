{
  "name": "sleeplight",
  "version": "0.0.1",
  "description": "Software to show a different LED light on an RPi based on time of day.",
  "main": "server/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf client && webpack --bail --progress --profile --optimize-minimize",
